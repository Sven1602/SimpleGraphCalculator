<Window x:Class="SimpleGraphCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleGraphCalculator" xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="SIMPLE GRAPH CALCULATOR AND PLOTTER" Height="600" Width="800" Closing="close">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="SIMPLE GRAPH CALCULATOR AND PLOTTER" Margin="30" FontSize="20" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center">
            </TextBlock>
            <GroupBox Header="Funktion auswählen und Funktionswert ermitteln" Margin="30">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontSize="16" Text="f(x)="></TextBlock>
                    <ComboBox VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Margin="5" FontSize="16" ItemsSource="{Binding Path=FunctionNames}"
                            SelectedItem="{Binding CurrentFunctionName, Mode=TwoWay}" SelectedValue="0" />
                    <ComboBox VerticalAlignment="Center" HorizontalAlignment="Center" Width="80" Margin="5" FontSize="16" ItemsSource="{Binding Path=Units}"
                    SelectedItem="{Binding CurrentUnit, Mode=TwoWay}"/>
                    <TextBox Text="{Binding Path=XValue}" Width="60" Margin="5" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center">
                    </TextBox>
                    <Button ToolTip="Berechnet den Funktionswert." Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Width="60" Command="{Binding Path=CalcCommand}">=</Button>
                    <TextBlock Text="{Binding Path=FunctionValue}" FontWeight="Bold" Margin="5" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center">
                    </TextBlock>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Visualisierung" Margin="30">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label VerticalAlignment="Center">min. X-Value</Label>
                        <Slider VerticalAlignment="Center" Value="{Binding Path=MinXValue, Mode=TwoWay}" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" FontSize="16" Width="60" Minimum="-10" Maximum="0"></Slider>
                        <TextBlock  Margin="5,0,0,0" VerticalAlignment="Center" Text="{Binding Path=MinXValue}"></TextBlock>
                        <Label Margin="5,0,0,0" VerticalAlignment="Center">max. X-Value</Label>
                        <Slider VerticalAlignment="Center" Value="{Binding Path=MaxXValue, Mode=TwoWay}" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" FontSize="16" Width="60" Minimum="0" Maximum="10"></Slider>
                        <TextBlock  Margin="5,0,0,0" VerticalAlignment="Center" Text="{Binding Path=MaxXValue}"></TextBlock>
                        <Label Margin="5,0,0,0" VerticalAlignment="Center">Increment X-Value (rad)</Label>
                        <Slider VerticalAlignment="Center" TickFrequency="0.1" IsSnapToTickEnabled="True" Value="{Binding Path=IncrementRad, Mode=TwoWay}" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" FontSize="16" Width="60" Minimum="0.1" Maximum="2"></Slider>
                        <TextBlock  Margin="5,0,0,0" VerticalAlignment="Center" Text="{Binding Path=IncrementRad}"></TextBlock>
                    </StackPanel>
                    <oxy:PlotView Height="250" Width="500" Model="{Binding ChartManager.ChartModel}"/> 
            </StackPanel>
            </GroupBox>
        </StackPanel>
        
        
    </Grid>
</Window>
